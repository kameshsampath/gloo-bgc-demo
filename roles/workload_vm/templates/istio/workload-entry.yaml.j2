apiVersion: networking.istio.io/v1beta1
kind: WorkloadEntry
metadata:
  name: "{{ istio_vm_app }}"
  namespace: "{{ istio_vm_namespace }}"
spec:
  network: "{{ istio_cluster_network }}"
  address: "{{ ansible_default_ipv4.address  | ansible.netcommon.ipv4('address')}}"
  labels:
    app: "{{ istio_vm_app }}"
    version: canary
  serviceAccount: "{{ istio_vm_service_account }}"